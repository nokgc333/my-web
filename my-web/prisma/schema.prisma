generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Account {
  id                 String    @id @default(cuid())
  userId             String
  type               String
  provider           String
  providerAccountId  String
  refresh_token       String?  @db.Text
  access_token        String?  @db.Text
  expires_at         Int?
  token_type         String?
  scope              String?
  id_token           String?   @db.Text
  session_state      String?

  // "createdAt"という名前をテーブルのスキーマで変更したいとき(@map(name: "create_at"))
  // Next.jsライブラリで認証するときは、"createdAt"というプロパティ名と一致する必要がある
  // テーブルに保存するときは"created_at"という、スキーマの名前で保存する
  createdAt          DateTime  @default(now()) @map(name: "created_at")
  updatedAt          DateTime  @default(now()) @map(name: "updated_at")

  // 外部キー接続
  // リレーションを"User"モデルと"Account"モデルで紐付けている状態
  // フィールドが[userId: Accountで定義されたuserId]と[id: ユーザーモデルで定義されたid]
  // これらと外部キー接続(リレーションを作っている)
  // 外部キー接続することで、「データの整合性の確保」ができるようになる
  // ex.存在しないユーザーに対して、アカウントデータ作成されることがなくなる
  // ex.DBに対して、データを取得したいとき、効率的に取得できる
  user               User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map(name: "accounts")
}

model Session {
  id           String   @id @default(cuid())
  userId       String
  expires      DateTime
  sessionToken String   @unique

  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map(name: "sessions")
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  accounts      Account[]
  sessions      Session[]

  Post          Post[]
  stripeCustomerId String? @unique @map(name: "stripe_customer_id")
  stripeSubscriptionId String? @unique @map(name: "stripe_subscription_id")
  stripePriceId String? @map(name: "stripe_price_id")
  stripeCurrentPeriodEnd DateTime? @map(name: "stripe_current_period_end")

  @@map(name: "users")
}

model VerificationRequest {
  id         String   @id @default(cuid())
  identifier String
  token      String   @unique
  expires    DateTime
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@unique([identifier, token])
  @@map(name: "verification_tokens")
}

model Post {
  id String @id @default(cuid())
  title String
  content Json?
  published Boolean @default(false)
  createdAt DateTime @default(now()) @map(name: "created_at")
  updatedAt DateTime @default(now()) @map(name: "updated_at")

  authorId String

  author User @relation(fields: [authorId], references: [id])

  @@map(name: "posts")
}